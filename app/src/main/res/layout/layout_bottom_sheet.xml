<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:text="Price Liquidation"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Merchandise Subtotal"/>

        <TextView
            android:id="@+id/merchSubtotalTxt"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="₱100"/>

        <TextView
            android:id="@+id/shippingSubTotalTxt"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginStart="-170dp"
            android:text="₱60" />
        <TextView
            android:id="@+id/additionalFeesTxt"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginStart="-170dp"
            android:text="₱60" />
        <TextView
            android:id="@+id/totalNumOfItemsTxt"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginStart="-170dp"
            android:text="x5" />
        <TextView
            android:id="@+id/totalPaymentTxt"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginStart="-170dp"
            android:text="₱60" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginStart="-370dp"
            android:text="Shipping Subtotal" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginStart="-200dp"
            android:text="Additional Fees" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginStart="-200dp"
            android:text="Total Number of Items" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginStart="-200dp"
            android:text="Total Payment" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:layout_marginStart="-200dp"
            android:text="Shipping Subtotal" />

    </LinearLayout>


</LinearLayout>
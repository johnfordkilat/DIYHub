<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/counterTxtStandardProductImages"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prodImageProductsStandard"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/diy"
            android:visibility="visible" />

        <TextView
            android:id="@+id/uploadFileNameTxtProductsStandard"
            android:layout_width="286dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="TextView"
            android:textSize="12dp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/uploadLoadingProductsStandard"
            android:layout_width="72dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/loading" />

    </LinearLayout>
</RelativeLayout>
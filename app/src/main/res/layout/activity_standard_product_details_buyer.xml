<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    tools:context=".Fragments.StandardProductDetailsBuyer">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerStandardProductDetailsBuyer"
        android:layout_width="412dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="391dp"
        android:layout_height="157dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/productRatingTxtStandardBuyer"
                android:layout_width="73dp"
                android:layout_height="34dp"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/addToFavoritesButtonStandardBuyer"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ProductPriceStandardDetailsBuyer"
                app:layout_constraintVertical_bias="0.954" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addToFavoritesButtonStandardBuyer"
                android:layout_width="99dp"
                android:layout_height="33dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/pink"
                android:text="Add to Favorites"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ProductPriceStandardDetailsBuyer"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/productNameStandardDetailsBuyer"
                android:layout_width="369dp"
                android:layout_height="51dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="TextView"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/ProductPriceStandardDetailsBuyer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.272"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/ProductPriceStandardDetailsBuyer"
                android:layout_width="369dp"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="21dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="Product Price: â‚±"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/ratingBar2Buyer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar2Buyer"
                style="@android:style/Widget.Material.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:rating="4.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/productSoldStandardDetailsBuyer"
                app:layout_constraintHorizontal_bias="0.139"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/productSoldStandardDetailsBuyer"
                android:layout_width="73dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/productRatingTxtStandardBuyer"
                app:layout_constraintEnd_toStartOf="@+id/addToFavoritesButtonStandardBuyer"
                app:layout_constraintStart_toEndOf="@+id/productRatingTxtStandardBuyer"
                app:layout_constraintTop_toTopOf="@+id/productRatingTxtStandardBuyer" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="391dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="142dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shopImageViewStandardDetailsBuyer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border_image"
                android:src="@drawable/diy" />

            <TextView
                android:id="@+id/shopNameStandardDetailsBuyer"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="ShopName" />

            <TextView
                android:id="@+id/shopAddressStandardDetailsBuyer"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="ShopName" />

            <TextView
                android:id="@+id/shopRatingStandardDetailsBuyer"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="ShopName" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="391dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="13dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/productStockStandardDetailsBuyer"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="Stock: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionStandardDetails" />

            <TextView
                android:id="@+id/shippedFromStandardDetailsBuyer"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="Shipped From: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productStockStandardDetailsBuyer" />

            <TextView
                android:id="@+id/materialStandardDetailsBuyer"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="Material: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shippedFromStandardDetailsBuyer" />

            <TextView
                android:id="@+id/descriptionStandardDetailsFinalBuyer"
                android:layout_width="373dp"
                android:layout_height="54dp"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="Description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialStandardDetailsBuyer" />

            <TextView
                android:id="@+id/descriptionStandardDetails"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="323dp"
                android:layout_marginBottom="121dp"
                android:background="@drawable/textview_border_rectangle"
                android:text="Product Details"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView11"
        android:layout_width="391dp"
        android:layout_height="50dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView10"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/viewReviewsProductDetailsStandardBuyer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/custom_gray"
            android:text="View Reviews"
            android:textSize="30dp"
            android:textStyle="bold|italic" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="391dp"
        android:layout_height="90dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView11"
        app:layout_constraintVertical_bias="0.7">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyNowButtonStandardProductBuyer"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_blue"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="BUY NOW" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addToCartButtonStandardProductBuyer"
            android:layout_width="180dp"
            android:background="@drawable/custom_blue"
            android:layout_height="50dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="20dp"
            android:text="ADD TO CART" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/backButtonStandardProductBuyer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/viewPagerStandardProductDetailsBuyer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back_svgrepo_com" />

</androidx.constraintlayout.widget.ConstraintLayout>
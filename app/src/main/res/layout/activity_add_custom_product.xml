<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    tools:context=".Fragments.AddCustomProduct">

    <Spinner
        android:id="@+id/customProductSpinnerAddCustomProduct"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="232dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productSoldAddCustom"
        app:layout_constraintVertical_bias="0.588" />

    <TextView
        android:id="@+id/textView91"
        android:layout_width="415dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:text="ADD CUSTOM PRODUCT"
        android:textSize="32dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/addProdNameCustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addProdStocksCustom"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="Product Stocks"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/productMaterialsUsedAddCustom"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="Product Materials Used"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <EditText
        android:id="@+id/productDescriptionTxtAddCustom"
        android:layout_width="381dp"
        android:layout_height="187dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="Product Description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917" />

    <EditText
        android:id="@+id/productPriceAddCustom"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="Product Price"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <EditText
        android:id="@+id/addProdQuantityCustom"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="117dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="Product Quantity"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <EditText
        android:id="@+id/productSoldAddCustom"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="Product Sold"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <EditText
        android:id="@+id/addProdNameCustom"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/addVariationsCustom"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="79dp"
        android:text="Add Variations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDescriptionTxtAddCustom"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/smallSpecsImageCustomSeller"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/diy" />

        <ImageButton
            android:id="@+id/selectSmallImageCustomImageButtonStandard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            app:srcCompat="@drawable/ic_baseline_add_a_photo_24" />

        <TextView
            android:id="@+id/textView85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="14dp"
            android:text="Select Base Image"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bigSpecsImageCustomSeller"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/diy" />

        <ImageButton
            android:id="@+id/selectBigImageCustomImageButtonStandard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/ic_baseline_add_a_photo_24" />

        <TextView
            android:id="@+id/slslsls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            android:text="Select Image"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/submitButtonSmallAndBigCustom"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="230dp"
            android:text="Submit"
            android:textSize="20dp" />




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
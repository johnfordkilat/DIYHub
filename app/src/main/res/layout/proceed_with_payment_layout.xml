<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/shopNameTxtPlaceOrder"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:gravity="center"
                android:text="Shop Name"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/productNamePlaceOrder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/productImagePlaceOrder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/gray"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.034"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8" />

            <TextView
                android:id="@+id/productNamePlaceOrder"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="-100dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:gravity="center_vertical"
                android:text="Product Name" />

            <TextView
                android:id="@+id/variationPlaceOrder"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:gravity="center_vertical"
                android:text="Variation: "/>

            <TextView
                android:id="@+id/productPricePlaceOrder"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:gravity="center_vertical"
                android:text="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/productQuantityPlaceOrder"
                app:layout_constraintStart_toEndOf="@+id/productImagePlaceOrder"
                app:layout_constraintTop_toBottomOf="@+id/variationPlaceOrder" />

            <TextView
                android:id="@+id/productQuantityPlaceOrder"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginEnd="101dp"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="-42dp"
                android:layout_marginStart="230dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:gravity="center"
                android:text="x1"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/productPricePlaceOrder"
                app:layout_constraintTop_toBottomOf="@+id/variationPlaceOrder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="10dp"
                    android:background="@color/gray"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:background="@color/gray"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:background="@drawable/textview_border_rectangle"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:text="Shipping Subtotal"/>

                        <TextView
                            android:id="@+id/shippingSubTotalTxt"
                            android:layout_width="150dp"
                            android:layout_height="20dp"
                            android:gravity="right|center_vertical"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="₱100"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/textview_border_rectangle"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:text="Additional Fees"/>

                        <TextView
                            android:id="@+id/additionalFeesTxt"
                            android:layout_width="150dp"
                            android:layout_height="20dp"
                            android:gravity="right|center_vertical"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="₱100"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/textview_border_rectangle"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:text="Total Number of Items"/>

                        <TextView
                            android:id="@+id/totalNumOfItemsTxt"
                            android:layout_width="150dp"
                            android:layout_height="20dp"
                            android:gravity="right|center_vertical"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="₱100"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/textview_border_rectangle"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:text="Merchandise Subtotal"/>

                        <TextView
                            android:id="@+id/merchSubtotalTxt"
                            android:layout_width="150dp"
                            android:layout_height="20dp"
                            android:gravity="right|center_vertical"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="₱100"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/textview_border_rectangle_gray"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:text="Total Payment"/>

                        <TextView
                            android:id="@+id/totalPaymentTxt"
                            android:layout_width="150dp"
                            android:layout_height="20dp"
                            android:gravity="right|center_vertical"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="₱100"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/gray"/>

            </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>
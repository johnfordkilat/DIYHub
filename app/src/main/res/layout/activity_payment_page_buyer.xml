<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    android:orientation="vertical"
    tools:context=".PaymentPageBuyer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButtonPaymentPage"
            android:layout_width="43dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_back_svgrepo_com" />

        <TextView
            android:id="@+id/textView71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.5"
            android:text="PAYMENT"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintVertical_bias="0.05" />

        <ImageView
            android:id="@+id/imageView44"
            android:layout_width="37dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/img_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView69"
            android:layout_width="304dp"
            android:layout_height="20dp"
            android:text="________________________________________________"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/talkToSellerButtonPaymentPageBuyer"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="1dp"
            android:drawableRight="@drawable/ic_baseline_chat_24"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:text="TALK TO SELLER"
            android:textSize="20dp">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/requestPickupButtonPaymentPageBuyer"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_baseline_directions_walk_24"
            android:layout_marginEnd="1dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:text="REQUEST PICKUP"
            android:textSize="20dp">
        </Button>


        <Spinner
            android:id="@+id/courierOption_btn"
            android:layout_width="421dp"
            android:layout_height="57dp"
            android:layout_marginTop="40dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />


        <Spinner
            android:id="@+id/paymentOptionPayment"
            android:layout_width="421dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="37dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/finalAmountPaymentPage"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:text="FINAL AMOUNT TO BE PAID: "
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payButtonPaymentPageBuyer"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="1dp"
            android:background="@color/green"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="4"
            android:text="Place Order"
            android:textSize="30dp"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@drawable/textview_border_rectangle"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/diy"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Price Liquidation"
            android:layout_marginStart="-30dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        android:background="@color/gray"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="270dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:background="@drawable/textview_border_rectangle"
            android:padding="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="italic"
                android:text="Shipping Subtotal"/>

            <TextView
                android:id="@+id/shippingSubTotalTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="₱100"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/textview_border_rectangle"
            android:padding="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="italic"
                android:text="Additional Fees"/>

            <TextView
                android:id="@+id/additionalFeesTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="₱100"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/textview_border_rectangle"
            android:padding="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="italic"
                android:text="Total Number of Items"/>

            <TextView
                android:id="@+id/totalNumOfItemsTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="₱100"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/textview_border_rectangle"
            android:padding="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="italic"
                android:text="Merchandise Subtotal"/>

            <TextView
                android:id="@+id/merchSubtotalTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="₱100"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/textview_border_rectangle_gray"
            android:padding="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="italic"
                android:text="Total Payment"/>

            <TextView
                android:id="@+id/totalPaymentTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="₱100"/>

        </LinearLayout>






    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmButtonPriceLiquidation"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/custom_pink"
            android:textStyle="italic"
            android:text="Confirm"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"/>

</LinearLayout>
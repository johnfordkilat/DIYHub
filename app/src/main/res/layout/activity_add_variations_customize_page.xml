<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    tools:context=".Fragments.AddVariationsCustomizePage">


    <TextView
        android:id="@+id/addSecondVariationButtonCustom"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:background="@color/blue"
        android:gravity="center_horizontal|center_vertical"
        android:text="Add Size"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/addProductButtonCustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAddSecondVariationsCustom"
        app:layout_constraintVertical_bias="0.731" />

    <TextView
        android:id="@+id/removeSecondVariationButtonCustom"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="14dp"
        android:background="@color/red"
        android:gravity="center_horizontal|center_vertical"
        android:text="Remove Size"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/addProductButtonCustom"
        app:layout_constraintEnd_toStartOf="@+id/addSecondVariationButtonCustom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAddSecondVariationsCustom"
        app:layout_constraintVertical_bias="0.731" />

    <Spinner
        android:id="@+id/spinnerAddSecondVariationsCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintBottom_toTopOf="@+id/addProductButtonCustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopMottoTxt5"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/addVariationButtonCustom"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:background="@color/blue"
        android:gravity="center_horizontal|center_vertical"
        android:text="Add Color"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editShopNameButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopMottoTxt4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/removeVariationButtonCustom"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:background="@color/red"
        android:gravity="center_horizontal|center_vertical"
        android:text="Remove Color"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/shopMottoTxt5"
        app:layout_constraintEnd_toStartOf="@+id/addVariationButtonCustom"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopMottoTxt4"
        app:layout_constraintVertical_bias="0.986" />

    <Spinner
        android:id="@+id/spinnerAddVariationsCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="88dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintBottom_toTopOf="@+id/shopMottoTxt5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFirstVarButtonCustom"
        app:layout_constraintVertical_bias="0.059" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/uploadProductImagesCustomPage"
        android:layout_width="409dp"
        android:layout_height="157dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/shopMottoTxt4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addProductImageButtonCustom" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addProductImageButtonCustom"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="164dp"
        android:background="@drawable/custom_green"
        android:text="Add Product Image"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView92"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/editShopNameButton5"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addProductButtonCustom"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="158dp"
        android:background="@drawable/custom_green"
        android:text="UPLOAD PRODUCT"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="415dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="651dp"
        android:gravity="center_horizontal"
        android:text="Add Variations - Customize Page"
        android:textSize="28dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/shopMottoTxt4"
        android:layout_width="411dp"
        android:layout_height="34dp"
        android:background="@drawable/edit_text_border"
        android:editable="false"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Color"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <EditText
        android:id="@+id/shopMottoTxt5"
        android:layout_width="411dp"
        android:layout_height="34dp"
        android:background="@drawable/edit_text_border"
        android:editable="false"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="Size"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634" />

    <ImageView
        android:id="@+id/editFirstVarButtonCustom"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <ImageView
        android:id="@+id/editSecondVarButtonCustom"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635" />

</androidx.constraintlayout.widget.ConstraintLayout>
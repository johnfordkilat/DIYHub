<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    android:orientation="vertical"
    tools:context=".Fragments.StandardProductBuyer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="43dp"
                android:layout_height="37dp"
                android:src="@drawable/ic_back_svgrepo_com"/>

            <TextView
                android:id="@+id/shopNameStandardProductBuyer"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Glass Jar"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="49dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/heart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="400dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/gradient"
            android:layout_height="30dp">
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customize" />

        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerStandardBuyer"
                android:layout_width="400dp"
                android:layout_height="260dp">


            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBarBuyer"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="80dp"
                    android:rating="4.5"
                    android:layout_marginLeft="60dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/ratingNum"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="4.5" />

                <TextView
                    android:id="@+id/productSoldStandardProductBuyer"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:text="1,000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.5"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:layout_marginLeft="60dp"
                    android:textSize="15sp"
                    android:text="Product Details" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@drawable/textview_border_rectangle_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stockProduct"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:textSize="15sp"
                    android:layout_marginStart="60dp"
                    android:text="100" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:text="Visit Shop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/textview_border_rectangle_gray"
                android:padding="5dp">

                <TextView
                    android:id="@+id/bookFromProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginStart="60dp"
                    android:text="Caduman Mandaue " />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/textview_border_rectangle_gray"
                android:padding="5dp">
                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:textSize="15sp"
                    android:text="_________________________________________"/>
                <TextView
                    android:id="@+id/descriptionProduct"
                    android:layout_width="405dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/textview_border_rectangle_gray"
                    android:layout_marginEnd="25dp"
                    android:text="Glass Jars of great quality which comes in a variety \n of designs..."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView70"
                    android:layout_width="400dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="REVIEWS"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceProduct"
                    android:layout_width="400dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/red"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="P 100.00"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/buyNowBtn"
                    android:layout_width="200dp"
                    android:layout_height="37dp"
                    android:background="@color/red"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="BUY NOW"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/addToCartStandard"
                    android:layout_width="200dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="5dp"
                    android:text="ADD TO CART"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:background="@color/red"
                    android:gravity="center_horizontal|center_vertical"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>